{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "./",
        "outDir": "./dist",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true, 
        "baseUrl": "./",
        "paths": {
            "src/*": ["./src/*"]
        }
    },
    "include": [ "./**/*.ts" ],
    "exclude": [ "node_modules", "dist" ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}